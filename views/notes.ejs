<!DOCTYPE html>
<html>

<head>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/style.css" />
    <title>Take Notes v2.0.3</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark justify-content-between" id="display-2">
        <a class="navbar-brand" href="#">TAKE NOTES</a>
        <button class="btn btn-transparent my-2 my-sm-0" onclick="logoutUser()">LOGOUT</button>
    </nav>

    <div id="inputDiv">
        <div style="padding: 20px;">
            <form class="text-center">
                <div class="row text-center" id="title">
                    <input placeholder="Title" class="input-box col-lg-6 col-md-6 col-sm-8 col-xs-10" id="titleArea">
                </div>
                <div class="row text-center" id="title">
                    <textarea placeholder="Take a note..." class="textArea col-lg-6 col-md-6 col-sm-8 col-xs-10"
                        id="textArea"></textarea>
                </div>
            </form>
            <div style="padding: 10px;" class="text-center">
                <button class="btn" onclick="sendNote()">SAVE NOTE</button>
            </div>
        </div>
    </div>

    <div>
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-10 col-xs-12">
                <div class="card-columns offset-lg-2 offset-md-1 offset-sm-0 offset-xs-0">
                    <% for(var i = 0; i < note.length; i++){ %>
                    <div class="container">
                        <div class="card my-4">
                            <div>
                                <p id="localTitleId-<%=i%>" class="card-header"><%=note[i].title%></p>
                            </div>
                            <blockquote class="blockquote card-body" style="font-size: 13px;">
                                <p id="localTextId-<%=i%>"><%- note[i].text = note[i].text.replace(/\n/g, '<br>')%></p>
                            </blockquote>
                            <div class="card-footer text-center">
                                <button class="modal-btn btn btn-transparent"
                                    onclick="modifyModal('<%=note[i]._id%>', '<%=i%>', popUp())">VIEW</button>
                                <!-- onclick="modifyModal('<%=note[i]._id%>', popUp())" -->
                                <button class="btn btn-transparent"
                                    onclick="deleteNote('<%=note[i]._id%>')">DELETE</button>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-bg">
        <div class="modal-in">
            <div class="row" id="_id"></div>
            <form>
                <div class="row text-center" id="title">
                    <textarea class="titleAreaModal" id="titleAreaModal"></textarea>
                </div>
                <div class="row">
                    <textarea class="textAreaModal" id="textAreaModal"></textarea>
                </div>
            </form>
            <span class="modal-close">+</span>
            <button class="btn btn-transparent" onclick="updateNote()">UPDATE</button>
        </div>
    </div>

    <br><br><br>

    <footer>
        <div class="column">
            <div>
                <nav class="navbar navbar-expand-lg justify-content-center">
                    <div class="mx-5">&copy; Take Notes v2.0.3</div>
                    <!-- <div class="mx-5">Version 2.0.2</div> -->
                    <!-- <a class="link mx-5" href="#">Privacy</a> -->
                    <a class="link mx-5" href="https://sravanth-chebrolu.github.io">Reach out!</a>
                </nav>
            </div>
        </div>
    </footer>
    <div class="loader-wrapper">
        <span class="loader"><span class="loader-inner"></span></span>
    </div>
    <script>
        $(window).on("load", function () {
            $(".loader-wrapper").fadeOut(1500);
        });
    </script>
    <script src="/assets/notes.js"></script>
    <script src="/assets/login.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</body>

</html>